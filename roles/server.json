{
  "name": "server",
  "description": "applied to server nodes.",
  "json_class": "Chef::Role",
  "default_attributes": {
    "users": ["hadashi", "tyome"],
    "authorization": {
      "sudo": {
        "include_sudoers_d": true,
        "passwordless": true,
        "groups": ["admin"],
        "users": ["hadashi"]
      }
    },
    "rbenv": {
      "git_ref": "master",
      "install_prefix": "/usr/local",
      "rubies": ["2.0.0-p0"],
      "global": "2.0.0-p0"
    },
    "gems": {
      "2.0.0-p0": [
        { "name": "bundler" }
      ]
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "recipe[build-essential]",
    "recipe[git]",
    "recipe[zsh]",
    "recipe[vim]",
    "recipe[ruby_build]",
    "recipe[rbenv::system]",
    "recipe[user::data_bag]",
    "recipe[sudo]"
  ],
  "env_run_lists": {
  }
}
